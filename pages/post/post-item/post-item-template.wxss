
.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    /* 垂直居中 */
     vertical-align:middle;  
}

.post-date {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 10px;
    font-size: 26rpx;
}

.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin: 0 0 10px 10px;

}

.post-image {
    margin-left: 16px;
    width: 100%;
    margin: auto 0;
    margin-bottom: 15px;
}

.post-content {
    color:#666;
    font-size: 28rpx;
    margin: 0 0 28rpx 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}